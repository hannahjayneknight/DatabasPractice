{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": false,
            "name": "Launch index.html",
            "file": "${workspaceFolder}/index.html"
        },
        {
            "name": "Firefox Debugger",
            "type": "firefox",
            "request": "launch",
            "reAttach": false,
            "url": "http://localhost:8080/index.html",
            "webRoot": "${workspaceFolder}",
            "keepProfileChanges": false
        },
        {
            "name": "Node Server",
            "type": "node",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/server.js"
        }
    ]
}